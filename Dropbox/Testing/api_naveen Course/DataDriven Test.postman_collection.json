{
	"info": {
		"_postman_id": "3ab43982-6419-4085-8370-ca4b6ff7f5e6",
		"name": "DataDriven Test",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "732190"
	},
	"item": [
		{
			"name": "Create User with Data",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.globals.set(\"requestJson\", JSON.stringify(pm.iterationData.toObject()));"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Body contains data\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.json.name).to.eql(pm.iterationData.get(\"name\"));",
							"    pm.expect(jsonData.json.city).to.eql(pm.iterationData.get(\"city\"));",
							"    pm.expect(jsonData.json.designation).to.eql(pm.iterationData.get(\"designation\"));",
							"",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{{requestJson}}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://httpbin.org/post",
					"protocol": "http",
					"host": [
						"httpbin",
						"org"
					],
					"path": [
						"post"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create User with Same Data Driven Test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"check response body data\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.json.name).to.eql(pm.iterationData.get(\"name\"));",
							"    pm.expect(jsonData.json.city).to.eql(pm.iterationData.get(\"city\"));",
							"    pm.expect(jsonData.json.designation).to.eql(pm.iterationData.get(\"designation\"));",
							"",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n\n\"name\": \"{{name}}\",\n\"city\": \"{{city}}\",\n\"designation\": \"{{designation}}\",\n\"email\": {{$randomEmail}}\n\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://httpbin.org/post",
					"protocol": "http",
					"host": [
						"httpbin",
						"org"
					],
					"path": [
						"post"
					]
				}
			},
			"response": []
		}
	]
}