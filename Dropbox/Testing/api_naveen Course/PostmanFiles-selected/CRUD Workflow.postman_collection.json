	"item": [
		{
			"name": "Create a user",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const resData= pm.response.json();\r",
							"const userId= resData.id;\r",
							"console.log(\"User id ========== \"+userId);\r",
							"pm.variables.set(\"userId\",userId);\r",
							"\r",
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"pm.test(\"Name should be chandrima\", function () {\r",
							"   pm.expect(resData.name).to.eql(\"chandrima\");\r",
							"});\r",
							"\r",
							"const reuqestBody = JSON.parse(pm.request.body);\r",
							"const name = reuqestBody.name;\r",
							"const email = reuqestBody.email;\r",
							"console.log(\"user name & email id :===> \" + name + \":\" + email);\r",
							"//set name and email variables:\r",
							"pm.variables.set(\"name\", name);\r",
							"pm.variables.set(\"email\", email);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "{{tokenId}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\" : \"chandrima\",\r\n    \"email\" : \"{{$randomEmail}}\",\r\n    \"gender\" : \"female\",\r\n    \"status\" : \"active\"\r\n    }",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/public/v2/users/",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"public",
						"v2",
						"users",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "Get User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"\r",
							"\r",
							"pm.test(\"check the name in the response\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.name).to.eql(pm.variables.get(\"name\"));\r",
							"});\r",
							"\r",
							"pm.test(\"check the email in the response\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.email).to.eql(pm.variables.get(\"email\"));\r",
							"});\r",
							"\r",
							""
