{
	"info": {
		"_postman_id": "e7e6e968-642b-447c-b96a-e95e0f2be426",
		"name": "Data Driven Test",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "19737020"
	},
	"item": [
		{
			"name": "Create user with data",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.globals.set(\"requestJson\",JSON.stringify(pm.iterationData.toObject()));"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Body contains data\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.json.name).to.eql(pm.iterationData.get(\"name\"));\r",
							"    pm.expect(jsonData.json.city).to.eql(pm.iterationData.get(\"city\"));\r",
							"    pm.expect(jsonData.json.designation).to.eql(pm.iterationData.get(\"designation\"));\r",
							"\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{{requestJson}}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://httpbin.org/post",
					"protocol": "http",
					"host": [
						"httpbin",
						"org"
					],
					"path": [
						"post"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create user with same data driven",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"Your test name\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.json.name).to.eql(pm.iterationData.get(\"name\"));\r",
							"     pm.expect(jsonData.json.city).to.eql(pm.iterationData.get(\"city\"));\r",
							"      pm.expect(jsonData.json.designation).to.eql(pm.iterationData.get(\"designation\"));\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n\r\n    \"name\" : \"{{name}}\",\r\n     \"city\" : \"{{city}}\",\r\n      \"designation\" : \"{{designation}}\",\r\n      \"email\" : \"{{$randomEmail}}\"\r\n\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://httpbin.org/post",
					"protocol": "http",
					"host": [
						"httpbin",
						"org"
					],
					"path": [
						"post"
					]
				}
			},
			"response": []
		}
	]
}