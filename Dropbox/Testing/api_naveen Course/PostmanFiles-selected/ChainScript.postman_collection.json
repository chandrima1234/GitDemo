{
	"info": {
		"_postman_id": "36371697-fe74-4270-acd0-39d3d941ec58",
		"name": "ChainScript",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "732190"
	},
	"item": [
		{
			"name": "1 - Get Users",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const getResponse = pm.response.json(); ",
							"const userIds = getResponse.map(user => user.id);",
							"console.log(userIds);",
							"pm.variables.set(\"user_ids\", userIds);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "{{tokenId}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://gorest.co.in/public/v2/users?per_page=10",
					"protocol": "https",
					"host": [
						"gorest",
						"co",
						"in"
					],
					"path": [
						"public",
						"v2",
						"users"
					],
					"query": [
						{
							"key": "per_page",
							"value": "10"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "2 - Update User",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const userIds = pm.variables.get(\"user_ids\");",
							"",
							"pm.variables.set(\"singleUserId\", userIds.shift());",
							"",
							"if(Array.isArray(userIds) && userIds.length >0){",
							"    postman.setNextRequest(\"2 - Update User\");",
							"}",
							"else{",
							"    postman.setNextRequest(null);",
							"}",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "{{tokenId}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Pooja Automation\",\n    \"status\": \"inactive\"\n    }",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://gorest.co.in/public/v2/users/{{singleUserId}}",
					"protocol": "https",
					"host": [
						"gorest",
						"co",
						"in"
					],
					"path": [
						"public",
						"v2",
						"users",
						"{{singleUserId}}"
					]
				}
			},
			"response": []
		}
	]
}