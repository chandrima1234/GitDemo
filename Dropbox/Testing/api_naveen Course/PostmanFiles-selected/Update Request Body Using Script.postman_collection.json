{
	"info": {
		"_postman_id": "e54d1ffc-38b6-4f51-b8ec-1ceb287daef0",
		"name": "Update Request Body Using Script",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "732190"
	},
	"item": [
		{
			"name": "Create User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.collectionVariables.set(\"userId\", pm.response.json().id);",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"console.log(pm.request.body);",
							"",
							"const body = JSON.parse(pm.request.body.raw);",
							"",
							"//add new property:",
							"body.gender = \"male\";",
							"body.name = \"Subodh Singh\"",
							"//pm.request.body.raw = body;",
							"",
							"//if you want to add a json array:",
							"body.userData = [",
							"  { name: \"John\", age: 30 },",
							"  { name: \"Jane\", age: 25 },",
							"  { name: \"Sam\", age: 35 }",
							"];",
							"pm.request.body.raw = JSON.stringify(body);",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "{{tokenId}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\" : \"subodh\",\n    \"email\" : \"{{$randomEmail}}\",\n    \"status\" : \"active\"\n    }",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/public/v2/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"public",
						"v2",
						"users"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "userId",
			"value": ""
		}
	]
}